package string;
/**
 * @author D.V.Kovalevska
 *  * @version 1.0
 */

public class stringHw3 {
    public static void main(String[] args) {
        // метод выводит на экран 10 строк со значением числа Pi. В первой строке должно быть два знака после запятой, во второй три и так далее.
        int n = 2;

        for (int i = 0; i < 10; i++) {
            String result = String.format("%." + n + "f", Math.PI);
            n++;
            System.out.println("Pi = " + result);
        }

    }
}
